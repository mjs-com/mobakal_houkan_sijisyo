{
  "manifest_version": 3,
  "name": "モバカル訪問看護指示書 日付自動入力",
  "version": "1.0.0",
  "description": "モバカルの訪問看護指示書作成ページで日付を自動入力します",
  "permissions": [
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_title": "日付を自動入力"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ]
}

